// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id Int @id @default(autoincrement())
  guilde String
  email String
  mdp String
  role ROLE @default(DEVELOPER)
  avatar String
  date DateTime @default(now())
  team Team @relation("teamHasUser",fields: [teamId],references:[id])
  teamId Int
}

model Team{
  id Int @id @default(autoincrement())
  nameTeam String
  personnage String
  score Int
  date DateTime @default(now())
  user User? @relation("teamHasUser")
  raid Raid @relation(fields: [raidId],references: [id])
  raidId Int
}

model Raid{
  id Int @id @default(autoincrement())
  name String
  date DateTime @default(now())
  boss Boss @relation("bossHasRaid",fields: [bossId],references: [id])
  bossId Int
  team Team? @relation()
}

model Boss{
  id Int @id @default(autoincrement())
  name String
  life Int
  raid Raid? @relation("bossHasRaid")
}

enum ROLE{
  USER
  ADMIN
  DEVELOPER
}